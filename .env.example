# Server Configuration
PORT=3001
# Generate a secure API secret (minimum 32 characters required):
# On Linux/macOS: openssl rand -base64 48
# On any platform: node -e "console.log(require('crypto').randomBytes(48).toString('base64'))"
API_SECRET=change-me-to-a-secure-random-secret

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=freebox_watcher
DB_PASSWORD=change-me-to-a-secure-password
DB_NAME=freebox_watcher

# Logging
LOG_LEVEL=info

# Monitoring Configuration
HEARTBEAT_TIMEOUT=300000
DOWNTIME_CHECK_INTERVAL=60000
DOWNTIME_CONFIRMATION_DELAY=1800000

# Telegram Notifications (optional)
# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=
# Get chat ID by messaging your bot and visiting https://api.telegram.org/bot<token>/getUpdates
TELEGRAM_CHAT_ID=

# Discord Daily Chart (optional)
# Discord webhook URL for daily heartbeat rate charts
# Create a webhook in Discord: Server Settings > Integrations > Webhooks > New Webhook
DISCORD_WEBHOOK_URL=
# CRON schedule for chart generation (default: "0 5 * * *" = daily at 5:00 AM)
# Examples: "0 */4 * * *" = every 4 hours, "0 */6 * * *" = every 6 hours
CRON_SCHEDULE=
